@model CapstoneProject.Models.Evaluation

<h2> Evaluation</h2>
<p>Please rate how much you agree with each statement</p>
<br />
<div>
    @using (Html.BeginForm())
    {
        TempData["numberOffset"] = 0;
        foreach (var category in Model.Type.Categories)
        {
            foreach (var question in category.Questions)
            {
                @Html.EditorFor(e => question)
                TempData["numberOffset"] = (int)TempData["numberOffset"] + 1;
            }
        }
        <input type="submit" />
    }
</div>