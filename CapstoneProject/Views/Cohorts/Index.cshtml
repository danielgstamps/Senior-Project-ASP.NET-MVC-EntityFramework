@using CapstoneProject.Controllers
@model IEnumerable<CapstoneProject.Models.Cohort>

@{
    ViewBag.Title = "Index";
}

<h2>Cohorts</h2>
<h4 class="alert-success">@TempData["CreateSuccess"]</h4>
<h4 class="alert-success">@TempData["EditSuccess"]</h4>


@Html.ActionLink("Add New Cohort", "Create")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Employees.Count != 0 && !(item.Type1Assigned && item.Type2Assigned))
                {
                    @Html.ActionLink("Evaluate", "Create", "Evaluations", new {cohortId = item.CohortID}, null)
                    <label> | </label>
                }
                
                @Html.ActionLink("View", "Details", new { id = item.CohortID })
                <label> | </label>

                @if (!item.HasOpenEval(1) && !item.HasOpenEval(2))
                {
                    @Html.ActionLink("Edit", "Edit", new {id = item.CohortID})
                    <label> | </label>
                    @Html.ActionLink("Delete", "Delete", new {id = item.CohortID})
                }
                @if (item.HasOpenEval(1))
                {
                    <label class="alert-warning">Type 1 evaluation in progress</label>
                    if (item.HasOpenEval(2))
                    {
                        <label> | </label>
                    }
                }
                @if (item.HasOpenEval(2))
                {
                    <label class="alert-warning">Type 2 evaluation in progress</label>
                }

                @if (item.Employees.Count == 0)
                {
                    <label> | </label>
                    <label class="alert-warning">This cohort is empty.</label>
                }

                @if (item.Type1Assigned && !item.HasOpenEval(1))
                {
                    <label> | </label>
                    <label class="alert-info">Type 1 opens @item.EvalOpenDate(1)</label>
                    @Html.ActionLink("(Change)", "Edit", "Evaluations", new {cohortId = item.CohortID, typeId = 1}, null)
                }

                @if (item.Type2Assigned && !item.HasOpenEval(2))
                {
                    <label> | </label>
                    <label class="alert-info">Type 2 opens @item.EvalOpenDate(2)</label>
                    @Html.ActionLink("(Change)", "Edit", "Evaluations", new {cohortId = item.CohortID, typeId = 2}, null)
                }
            </td>
        </tr>
    }

</table>