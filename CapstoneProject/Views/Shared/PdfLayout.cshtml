
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Report</title>
    <style>
        html
        {
            font-family: Arial;
        }
        h1
        {
            color: blue;
        }
        table, tr, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        table
        {
            border-spacing: 1px;
        }
        table tr th
        {
            background-color: gray;
            color: white;
            padding: 8px;
            text-align: center;
        }
        table tr td
        {
            margin: 0px;
            padding: 4px;
            text-align: center;
        }
    </style>
</head>
<body>
    @RenderBody()
</body>
</html>
